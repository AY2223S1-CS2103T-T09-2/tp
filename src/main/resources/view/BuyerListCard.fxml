<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox id="cardPane" fx:id="cardPane" minWidth="1100.0" prefWidth="911.0" style="-fx-background-radius: 30px;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="697.6000305175781" minWidth="10.0" prefWidth="300.799951171875" />
         <ColumnConstraints hgrow="SOMETIMES" maxWidth="851.9999999999999" minWidth="10.0" prefWidth="808.8000488281249" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" maxWidth="300.0" minHeight="200.0">
      <padding>
        <Insets bottom="5.0" left="15.0" right="5.0" top="5.0" />
      </padding>
      <HBox alignment="CENTER_LEFT" prefWidth="130.0" spacing="5.0">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
               <font>
                  <Font size="18.0" />
               </font>
        </Label>
        <Label fx:id="name" styleClass="cell_big_label" text="\$name">
               <font>
                  <Font size="18.0" />
               </font></Label>
            <Label alignment="CENTER" contentDisplay="CENTER" style="-fx-background-color: #5DADE2; -fx-background-radius: 10px;" text="Buyer" textAlignment="CENTER" textFill="WHITE">
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
      </HBox>
      <Label fx:id="phone" styleClass="cell_small_label" text="\$phone">
            <VBox.margin>
               <Insets top="5.0" />
            </VBox.margin></Label>
      <Label fx:id="address" styleClass="cell_small_label" text="\$address" />
      <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
      <Label fx:id="orders" styleClass="cell_small_label" text="\$orders" />
    </VBox>
      <ListView fx:id="orderListPanel" minHeight="200.0" style="-fx-background-radius: 30px;" GridPane.columnIndex="1">
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
         <effect>
            <DropShadow />
         </effect>
      </ListView>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
</HBox>
